<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".registration">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <View
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@color/cream" />

        <RelativeLayout
            android:id="@+id/rl_two_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp">

            <ImageButton
                android:id="@+id/backBtn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_alignTop="@id/tv_one_login"
                android:layout_alignBottom="@id/tv_one_login"
                android:background="@null"
                android:src="@drawable/ic_back_24" />

            <TextView
                android:id="@+id/tv_one_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:text="REGISTRATION"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />



        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-50dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_one_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="150dp"
                    android:elevation="10dp"
                    app:cardBackgroundColor="#fcfcfc"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp"
                    app:cardPreventCornerOverlap="false"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignTop="@id/FirmEt"
                                android:layout_alignBottom="@id/FirmEt"
                                android:layout_marginStart="15dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/imageView2"
                                app:srcCompat="@drawable/ic_business_24" />



                            <EditText
                                android:id="@+id/FirmEt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:layout_marginBottom="5dp"
                                android:drawablePadding="5dp"
                                android:hint="Firm Name"
                                android:inputType="text"
                                android:padding="10dp"
                                android:textColor="@color/black" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignTop="@id/FirmEt"
                                android:layout_alignBottom="@id/FirmEt"
                                android:layout_marginStart="15dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/imageView1"
                                app:srcCompat="@drawable/ic_gst_24" />

                            <EditText
                                android:id="@+id/GstEt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/FirmnameEt"
                                android:layout_margin="5dp"
                                android:layout_marginBottom="5dp"
                                android:drawablePadding="5dp"
                                android:hint="GST"
                                android:inputType="text"
                                android:padding="10dp"
                                android:textColor="@color/black" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignTop="@id/FirmEt"
                                android:layout_alignBottom="@id/FirmEt"
                                android:layout_marginStart="15dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/imageView2"
                                app:srcCompat="@drawable/ic_person_outline_24" />

                            <EditText
                                android:id="@+id/FirstNameEt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/GstEt"
                                android:layout_margin="5dp"
                                android:drawablePadding="5dp"
                                android:hint="First Name"
                                android:inputType="textPersonName|textCapWords"
                                android:padding="10dp"
                                android:textColor="@color/black" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView4"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignTop="@id/FirmEt"
                                android:layout_alignBottom="@id/FirmEt"
                                android:layout_marginStart="15dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/imageView3"
                                app:srcCompat="@drawable/ic_person_outline_24" />

                            <EditText
                                android:id="@+id/LastNameEt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/FirstNameEt"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginBottom="5dp"
                                android:drawablePadding="5dp"
                                android:hint="LastName"
                                android:inputType="textPersonName|textCapWords"
                                android:padding="10dp"
                                android:textColor="@color/black" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView5"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignTop="@id/FirmEt"
                                android:layout_alignBottom="@id/FirmEt"
                                android:layout_marginStart="15dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/imageView4"
                                app:srcCompat="@drawable/ic_email_24" />

                            <EditText
                                android:id="@+id/emailEt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/LastNameEt"
                                android:layout_margin="5dp"
                                android:drawablePadding="5dp"
                                android:hint="Email"
                                android:padding="10dp"
                                android:textColor="@color/black" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignTop="@id/FirmEt"
                                android:layout_alignBottom="@id/FirmEt"
                                android:layout_marginStart="15dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/imageView5"
                                app:srcCompat="@drawable/ic_phone_24" />

                            <EditText
                                android:id="@+id/PhoneEt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/emailEt"
                                android:layout_margin="5dp"
                                android:drawablePadding="5dp"
                                android:hint="Phone Number"
                                android:inputType="phone"
                                android:padding="10dp"
                                android:textColor="@color/black" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView7"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignTop="@id/FirmEt"
                                android:layout_alignBottom="@id/FirmEt"
                                android:layout_marginStart="15dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/imageView6"
                                app:srcCompat="@drawable/ic_password_24" />


                            <EditText
                                android:id="@+id/PasswordEt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/phoneEt"
                                android:layout_margin="5dp"
                                android:drawablePadding="5dp"
                                android:hint="Password"
                                android:fontFamily="monospace"
                                android:inputType="textPassword"
                                android:padding="10dp"
                                android:textColor="@color/black" />


                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/cimageView7"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignTop="@id/FirmEt"
                                android:layout_alignBottom="@id/FirmEt"
                                android:layout_marginStart="15dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/imageView6"
                                app:srcCompat="@drawable/ic_password_24" />



                            <EditText
                                android:id="@+id/cpasswordEt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/phoneEt"
                                android:layout_margin="5dp"
                                android:drawablePadding="5dp"
                                android:hint="Confirm Password"
                                android:inputType="textPassword"
                                android:padding="10dp"
                                android:textColor="@color/black" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView8"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignTop="@id/FirmEt"
                                android:layout_alignBottom="@id/FirmEt"
                                android:layout_marginStart="15dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/imageView7"
                                app:srcCompat="@drawable/ic_gst_24" />

                            <EditText
                                android:id="@+id/PanEt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/passwordEt"
                                android:layout_margin="5dp"
                                android:drawablePadding="5dp"
                                android:hint="PAN Card"
                                android:inputType="textCapCharacters|numberSigned"
                                android:padding="10dp"
                                android:textColor="@color/black" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView9"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignTop="@id/FirmEt"
                                android:layout_alignBottom="@id/FirmEt"
                                android:layout_marginStart="15dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/imageView8"
                                app:srcCompat="@drawable/ic_add_location_24" />

                            <EditText
                                android:id="@+id/addressEt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/PanEt"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginBottom="5dp"
                                android:drawablePadding="5dp"
                                android:hint="Address"
                                android:inputType="textPostalAddress|textMultiLine"
                                android:padding="10dp"
                                android:textColor="@color/black" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView10"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignTop="@id/FirmEt"
                                android:layout_alignBottom="@id/FirmEt"
                                android:layout_marginStart="15dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/imageView9"
                                app:srcCompat="@drawable/ic_address_24" />

                            <EditText
                                android:id="@+id/PinEt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/addressEt"
                                android:layout_margin="5dp"
                                android:drawablePadding="5dp"
                                android:hint="Pin Code"
                                android:inputType="numberSigned"
                                android:padding="10dp"
                                android:textColor="@color/black" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView11"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignTop="@id/FirmEt"
                                android:layout_alignBottom="@id/FirmEt"
                                android:layout_marginStart="15dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/imageView10"
                                app:srcCompat="@drawable/ic_outline_calendar_month_24" />

                            <EditText
                                android:id="@+id/DobEt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/PinEt"
                                android:layout_margin="5dp"
                                android:drawablePadding="5dp"
                                android:hint="Date Of Birth"
                                android:inputType="date"
                                android:padding="10dp"
                                android:textColor="@color/black" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="0dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView12"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignTop="@id/FirmEt"
                                android:layout_alignBottom="@id/FirmEt"
                                android:layout_marginStart="15dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/imageView11"
                                app:srcCompat="@drawable/ic_outline_calendar_month_24" />

                            <EditText
                                android:id="@+id/DoaEt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/DobEt"
                                android:layout_margin="5dp"
                                android:drawablePadding="5dp"
                                android:hint="Date Of Anniversary"
                                android:inputType="date"
                                android:padding="10dp"
                                android:textColor="@color/black" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <Button
                android:id="@+id/registerBtn"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginTop="-15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#FFE4B7B7"
                android:elevation="15dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Register"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                app:cornerRadius="15dp" />

            <!--     <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="0dp"
                     android:orientation="horizontal">

                     <TextView
                         android:id="@+id/login1"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:layout_below="@+id/DobEt"
                         android:layout_margin="5dp"
                         android:drawablePadding="5dp"
                         android:hint="Already have an account? Click here"
                         android:gravity="center"
                         android:textStyle="bold"
                         android:inputType="date"
                         android:padding="10dp"
                         android:textColor="@color/colorBlack" />

                 </LinearLayout>-->



        </LinearLayout>



    </RelativeLayout>

</ScrollView>